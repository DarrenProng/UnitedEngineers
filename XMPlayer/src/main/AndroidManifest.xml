<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.engineers.united.unitedengineers">


    <!--normal permissions-->
    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <!--danger permissions-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name="com.engineers.united.unitedengineers.MainActivity">
		<intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity1"/>
        <activity android:name=".Activity2"/>
        <activity android:name=".Activity3"/>
        <activity android:name=".Activity4"/>
        <activity android:name=".Activity5"/>
        <activity android:name=".Activity6"/>
        <activity android:name=".MusicPlayerActivity"/>

    </application>

</manifest>